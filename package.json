    "@typescript-eslint/parser": "^4.31.2",
    "eslint": "^7.32.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "fastify": "^3.21.6",
    "fastify-static": "^4.2.3",
    "nodemon": "^2.0.12",
    "rollup": "^2.57.0",
    "typescript": "^4.4.3"
  }
